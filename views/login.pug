extends layout

block content
	h1 Register
	form(method='POST', action='/users/login')
		#form-group
			label(for='username') Username:
			input.form-control(name="username", type="text", id="username")
		#form-group
			label(for='password') Password:
			input.form-control(name="password", type="password", id="password")
		br
		input.btn.btn-primary(type="submit" value="Save")
