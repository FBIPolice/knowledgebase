extends layout

block content
	h1 Add Article
	form(method='POST', action='/article/add')
		#form-group
			label(for='title') Title:
			input.form-control(name="title", type="text", id="title")
		#form-group
			label(for='author') Author:
			input.form-control(name="author", type="text", id="author")
		#form-group
			label(for='body') Body:
			textarea.form-control(name="body", type="text", id="body")
		br
		input.btn.btn-primary(type="submit" value="Save")
