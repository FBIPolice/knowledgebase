extends layout

block content
	h1 #{article.title}
	small Written by #{article.author}
	br
	br
	p #{article.body}
	hr
	a.btn.btn-default(href="/article/edit/" + article._id) Edit
	a.btn.btn-danger(id="delete-article", href="#", data-id=article._id) Delete
	
block scripts
	script(src="/js/delete_article.js")
